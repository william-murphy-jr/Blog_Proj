<!-- views/layouts/login-form.handlebars -->

<div class="container">

    <div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in login"></span>{{title}}</h1>

    {{#if message}}
        <div class="alert alert-danger">{{message}}</div>
    {{/if}}


    <form id="frmUserLogin" method="post" action="/login" enctype="application/x-www-form-urlencoded">

        <input type="hidden" name="_method" value="{{method}}">
        
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" class="form-control" name="email"value="{{email}}">          
        </div>
        <div class="form-group">
            <label for="name">Password</label>
            <input type="password" name="password" id="password" class="form-control" value="{{password}}">
        </div>

        <div class="form-group">
            <button type="submit" name="login"  id="email" class="btn btn-warning btn-lg">Login</button>
        </div>
        <!-- <input type="submit" id="email"  name="login" value="Login"><br /> -->
        <!-- <input type="submit" value="{{buttonText}}" id="submitBtn"><br /> -->
    </form>

    <hr />
    
    <p>Need an account? <a href="/user/new">Signup</a></p>
    <p>Or go <a href="/">home</a>.</p>

    </div>

</div>
