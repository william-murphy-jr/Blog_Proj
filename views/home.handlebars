<!-- views/layouts/home.handlebars -->

<script type="text/javascript" src="/js/index.js"></script>
<div class="container">

    <div class="text-center">
        <h1><span class="fa fa-lock"></span> Welcome to Murph'z Blogging Service</h1>

        <div class="text-left">
			<p>You have reached Murph'z Blogging Service. Please log in if have an account and sign up if you do not have an account. </p>
			If you like you can just view the blogs below.
        </div>

        {{#unless loginName}}
            <a href="/login" class="btn btn-default"><span class="fa fa-user"></span> Login</a>
            <a href="/user/new" class="btn btn-default"><span class="fa fa-user"></span> Signup</a>
        {{/unless}}

        <br />
        <br />
    </div>

    <ul id="myUsers"></ul>
    <!-- <ul id="myblogs"></ul> -->
    <script id="myprojectsTemplate" type="text/x-handlebars-template">
            \{{#if bloggers}}
                \{{#each bloggers}}
                    <div class="text-left panel panel-info">
                        <div class="panel-heading">
                            <a href="/home/find/\{{_id}}"><h4>\{{name}}&nbsp&nbsp--&nbsp&nbspPosted: </h4></a>
                        </div>
                        \{{#each blogs}}

                        <div class="panel-body">
                            <h4>\{{projectName}}</h4>
                            <p>\{{lastModified}}</p>
                            <a href="/home/blog/\{{_id}}">\{{tasks}}</a>                            
                        </div>

                        <hr />
                        \{{/each}}

                        
                    </div>
                \{{/each}}
            \{{else}}
              <li class="listgroup-item">There are no bloggers on this site!!!</li>
            \{{/if}}
    </script>


</div>

